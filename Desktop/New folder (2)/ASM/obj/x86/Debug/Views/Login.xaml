<Page
    x:Class="ASM.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel >

        <TextBlock HorizontalAlignment="Center" Margin="0,100,0,0" > <Bold>Login Now</Bold></TextBlock>
        <TextBlock Text="______________________________________________" TextAlignment="Center"/>
        <StackPanel Margin="20,50,20,0">
            <TextBox x:ConnectionId='2' x:Name="lEmail" Header="Email"/>
            <PasswordBox x:ConnectionId='3' x:Name="lPassword" Header="PassWord"/>
            <StackPanel Orientation="Horizontal">
                <Button Style="{ThemeResource TextBlockButtonStyle}">
                    <TextBlock Text="Forgot PassWord?" Margin="30,10,30,0"/>
                </Button>
                <Button x:ConnectionId='5' Style="{ThemeResource TextBlockButtonStyle}"                    >
                    <TextBlock Text="SignUp" Margin="30,10,0,0"/>
                </Button>
                <TextBlock x:ConnectionId='6' x:Name="ValidateError" Visibility="Visible"/>
            </StackPanel>
            <Button x:ConnectionId='4' Content="LogIn" HorizontalAlignment="Center" Margin="10"                  />            
        </StackPanel>
    </StackPanel>
</Page>

