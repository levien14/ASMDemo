<Page
    x:Class="ASM.Views.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:ConnectionId='16' x:Name="rFirstName" Header="Fist Name" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBox x:ConnectionId='17' x:Name="rLastName" Header="Last Name" Grid.Row="0" Grid.Column="1" Margin="10,0,0,0"/>
                </Grid>
                <TextBox x:ConnectionId='2' x:Name="rEmail" Header="Email"/>
                <PasswordBox x:ConnectionId='3' x:Name="rPassword" Header="PassWord"/>
                <TextBox x:ConnectionId='4' x:Name="rPhone" Header="PhoneNumber"/>
                <TextBox x:ConnectionId='5' x:Name="rAvatar" Header="Avatar"/>
                <Grid Margin="0,20,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:ConnectionId='14' x:Name="rImage" Width="150" Height="150" Grid.Column="0"/>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button x:ConnectionId='15' Content="Capture" Margin="20" Grid.Row="0"                />
                        <Button Content="Choose Avatar" Margin="20" Grid.Row="1"/>
                    </Grid>
                </Grid>
                <CalendarDatePicker x:ConnectionId='6' x:Name="rBirthday" Header="Birthday"                             />
                <StackPanel Orientation="Horizontal" Margin="20,5,0,0" >
                    <RadioButton x:ConnectionId='11' Content="Male" Tag="1"                         />
                    <RadioButton x:ConnectionId='12' Content="Feale" Tag="2" Margin="15,0,0,0"                          />
                    <RadioButton x:ConnectionId='13' Content="Other" Tag="0" Margin="15,0,0,0"                         />
                </StackPanel>
                <TextBox x:ConnectionId='7' x:Name="rAddress" Header="Address" Height="80"/>
                <TextBox x:ConnectionId='8' x:Name="rIntro" Header="Introduction" Height="80"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='9' Content="Register" HorizontalAlignment="Center" Margin="10"                    />
                    <Button x:ConnectionId='10' Content="Reset" HorizontalAlignment="Center" Margin="10"                 />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

